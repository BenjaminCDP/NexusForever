<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\NexusForever.Game.Abstract\NexusForever.Game.Abstract.csproj" />
    <ProjectReference Include="..\NexusForever.Script\NexusForever.Script.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Blighthaven\" />
    <Folder Include="Malgrave\" />
    <Folder Include="WesternGrimvault\" />
    <Folder Include="SouthernGrimvault\" />
    <Folder Include="TheDefile\" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Condition="'$(OS)' == 'Windows_NT'" Command="copy /Y &quot;$(TargetDir)$(TargetName).dll&quot; &quot;$(SolutionDir)NexusForever.WorldServer\bin\$(Configuration)\$(TargetFramework)\$(TargetName).dll&quot;" /> 
    <Exec Condition="'$(OS)' != 'Windows_NT'" Command="mkdir -p &quot;$(SolutionDir)NexusForever.WorldServer/bin/$(Configuration)/$(TargetFramework)&quot;" /> 
    <Exec Condition="'$(OS)' != 'Windows_NT'" Command="cp &quot;$(TargetDir)$(TargetName).dll&quot; &quot;$(SolutionDir)NexusForever.WorldServer/bin/$(Configuration)/$(TargetFramework)/$(TargetName).dll&quot;" />
  </Target>

</Project>
